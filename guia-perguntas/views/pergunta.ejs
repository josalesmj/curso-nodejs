<%- include ('partils/header.ejs'); %>

<body>
  <%- include ('partils/navbar.ejs'); %>

  <div class="container">
    <hr/>
    <h1> <%= pergunta.titulo %> </h1>
    <p> <%= pergunta.createdAt %></p>
    <hr/>
    <p> <%= pergunta.descricao %> </p>
    <hr/>

    <form method="POST" action="/responder">
      <label>Resposta:</label>
      <textarea class="form-control mt-2" placeholder="Digite sua resposta" name="corpo" cols="30" rows="5"></textarea>
      <input type="hidden" name="pergunta" value="<%= pergunta.id %>">
      <button type="submit" class="btn btn-primary mt-2">Responder</button>
    </form>
    <hr/>

    <% respostas.forEach(resposta => { %>
      <div class="card mt-4 mb-4">
        <div class="card-body">
          <p><%= resposta.corpo %></p>
        </div>
      </div>
      
    
    
    <% }) %>





  </div>

</body>
</html>