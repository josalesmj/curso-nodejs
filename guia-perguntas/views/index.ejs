<%-include ('partils/header.ejs'); %>
<link rel="stylesheet" href="../public/css/style.css">
<body>
  <!-- <%= %> Significa exibir valor da variável, usado apenas com variável -->
  <!-- <% %> Usado para expressões -->

  <%- include ('partils/navbar.ejs'); %>

  <div class="container">
    <hr/>
    <div class="row align-items-center">
      <div class="col-6">
        <h1>Perguntas</h1>
      </div>
      <div class="col-6">
        <a href="/perguntar" class="btn btn-primary float-right">Perguntar</a>
      </div>
    </div>
    <hr/>
    <% perguntas.forEach(pergunta => { %>
      <br/>
      <div class="card">
        <div class="card-body">
          <h3><%= pergunta.id %>. <%= pergunta.titulo %></h3>
        </div>
        <div class="card-footer">
          <a href="/pergunta/<%= pergunta.id %>" class="btn btn-warning">Responder</a>
        </div>
      </div>  
    <% }) %>
  </div>  

</body>
</html>