<%- include('../../partials/header.ejs') %>

<%- include('../../partials/homenavbar.ejs') %>

<div class="container">
  <hr>
  

  <% result.articles.rows.forEach(article => { %>
    <div class="card">
      <div class="card-header">
        <h2><%= article.title %></h2>
      </div>

      <div class="card-body">
        <a href="/<%=article.slug%>" class="btn btn-success float-right">Ler  artigo</a>
      </div>

    </div>
    <br>

  <% }) %>

  <div class="row" style="display: inline;">
    <div class="col col-12">

      <% if( result.page > 2 ) { %>
        <a href="/articles/page/<%= result.page - 1 %>">Página Anterior</a>
      <% } else if(result.page == 2) { %>
        <a href="/">Home</a>
      <% } %>
      <% if(result.next) { %>
        <a class="float-right"href="/articles/page/<%= result.page+1 %>">Próxima Página</a>
      <% } %>
    </div>
    
  </div>
  <br>
  <hr>


</div>
  
<%- include('../../partials/footer.ejs') %>