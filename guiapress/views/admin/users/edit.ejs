<%- include('../../partials/navbar.ejs'); %>

<div class="container">
  <hr>
  <div class="card mt-5">
    <div class="card-header">
      <h1 class="text-center">Editar Usu√°rio</h1>
    </div>
    <div class="card-body">
      <form method="POST" action="/users/update">
        <div class="row">
          <div class="col-6 offset-3">
            <input value="<%=user.email%>"class="form-control" type="email" name="email" placeholder="email@example.com">
            <input type="hidden" name="id" value="<%=user.id%>">
          </div>
        </div>
        <br>  

        <div class="row">
          <div class="col-6 offset-3">
            <input class="form-control" type="password" name="password" placeholder="*******" value="<%=user.password %>">
          </div>
        </div>
        <br>
        <div class="row">
          <div class="col-6 offset-3">
            <button class="btn btn-success btn-block" type="submit">Atualizar</button>
            <a href="/admin/users/" class="btn btn-danger">Cancelar</a>
          </div>
        </div>
      </form>
    </div>
  </div>
</div>


